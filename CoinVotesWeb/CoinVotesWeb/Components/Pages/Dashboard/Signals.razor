@page "/dashboard/signals"
@using CoinVotesWeb.Components.Layout
@layout DashboardLayout
<PageTitle>Signals - Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Signals Management</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Signal Name</th>
                                    <th>Symbol</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>BTC Buy Signal</td>
                                    <td>BTC/USD</td>
                                    <td><span class="badge bg-success">Buy</span></td>
                                    <td><span class="badge bg-primary">Active</span></td>
                                    <td>2023-05-10</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>ETH Sell Signal</td>
                                    <td>ETH/USD</td>
                                    <td><span class="badge bg-danger">Sell</span></td>
                                    <td><span class="badge bg-primary">Active</span></td>
                                    <td>2023-05-12</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>XRP Hold Signal</td>
                                    <td>XRP/USD</td>
                                    <td><span class="badge bg-warning">Hold</span></td>
                                    <td><span class="badge bg-secondary">Inactive</span></td>
                                    <td>2023-05-08</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Create New Signal</button>
                </div>
            </div>
        </div>
    </div>
</div> 