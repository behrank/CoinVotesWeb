@page "/dashboard/symbols"
@using CoinVotesWeb.Components.Layout
@layout DashboardLayout
<PageTitle>Symbols - Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Symbols Management</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Symbol</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>24h Change</th>
                                    <th>Market Cap</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>BTC/USD</td>
                                    <td>Bitcoin</td>
                                    <td>$42,150.00</td>
                                    <td><span class="text-success">+2.5%</span></td>
                                    <td>$820.5B</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>ETH/USD</td>
                                    <td>Ethereum</td>
                                    <td>$2,850.00</td>
                                    <td><span class="text-success">+1.8%</span></td>
                                    <td>$340.2B</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>XRP/USD</td>
                                    <td>Ripple</td>
                                    <td>$0.52</td>
                                    <td><span class="text-danger">-0.5%</span></td>
                                    <td>$27.3B</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-info">View</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Add New Symbol</button>
                </div>
            </div>
        </div>
    </div>
</div> 